<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginTop="34dp">

	<ImageView
		android:id="@+id/audio_bg"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:layout_centerInParent="false"
		android:layout_centerHorizontal="true"
		android:layout_marginStart="8dp"
		android:layout_marginTop="60dp"
		android:layout_marginEnd="8dp"
		android:background="@drawable/audiobg"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.559"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/main_btn_audio_channel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:src="@drawable/mianti"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/main_btn_audio_ysq"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="16dp"
		android:src="@drawable/mainly_btn_ysq_selector"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/main_btn_audio_channel" />

	<Button
		android:id="@+id/main_btn_audio_effect"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="16dp"
		android:text="音效管理"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/main_btn_audio_ysq" />

	<TextView
		android:id="@+id/main_btn_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="24dp"
		android:singleLine="true"
		android:text="房号："
		android:textColor="#6a6a6a"
		android:textSize="@dimen/font_com_size_12"
		app:layout_constraintStart_toEndOf="@+id/main_btn_audio_channel"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/main_btn_host"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_toRightOf="@id/main_btn_title"
		android:singleLine="true"
		android:text="ID："
		android:textColor="#6a6a6a"
		android:textSize="@dimen/font_com_size_12"
		app:layout_constraintStart_toEndOf="@+id/main_btn_title"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/main_btn_audioup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:singleLine="true"
		android:textColor="#6a6a6a"
		android:textSize="@dimen/font_com_size_12"
		app:layout_constraintStart_toStartOf="@+id/main_btn_title"
		app:layout_constraintTop_toBottomOf="@+id/main_btn_title" />

	<ImageView
		android:id="@+id/main_btn_exit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginEnd="16dp"
		android:paddingTop="6dp"
		android:src="@drawable/mainly_btn_exit_selector"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:id="@+id/view"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="#c6c6c6"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/remote2" />

	<com.tttrtclive.helper.RemoteWindow
		android:id="@+id/remote1"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginBottom="1dp"
		app:layout_constraintBottom_toTopOf="@+id/remote4"
		app:layout_constraintDimensionRatio="3:4"
		app:layout_constraintEnd_toStartOf="@+id/remote2"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"></com.tttrtclive.helper.RemoteWindow>

	<com.tttrtclive.helper.RemoteWindow
		android:id="@+id/remote2"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="1dp"
		android:layout_marginEnd="1dp"
		android:layout_marginBottom="1dp"
		app:layout_constraintBottom_toTopOf="@+id/remote5"
		app:layout_constraintDimensionRatio="3:4"
		app:layout_constraintEnd_toStartOf="@+id/remote3"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/remote1"></com.tttrtclive.helper.RemoteWindow>

	<com.tttrtclive.helper.RemoteWindow
		android:id="@+id/remote3"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginBottom="1dp"
		app:layout_constraintBottom_toTopOf="@+id/remote6"
		app:layout_constraintDimensionRatio="3:4"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/remote2"></com.tttrtclive.helper.RemoteWindow>

	<com.tttrtclive.helper.RemoteWindow
		android:id="@+id/remote4"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="3:4"
		app:layout_constraintEnd_toStartOf="@+id/remote5"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"></com.tttrtclive.helper.RemoteWindow>

	<com.tttrtclive.helper.RemoteWindow
		android:id="@+id/remote5"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="1dp"
		android:layout_marginEnd="1dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="3:4"
		app:layout_constraintEnd_toStartOf="@+id/remote6"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/remote4"></com.tttrtclive.helper.RemoteWindow>

	<com.tttrtclive.helper.RemoteWindow
		android:id="@+id/remote6"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="3:4"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/remote5"></com.tttrtclive.helper.RemoteWindow>
</androidx.constraintlayout.widget.ConstraintLayout>